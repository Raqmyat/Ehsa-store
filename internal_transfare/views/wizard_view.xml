<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_multi_location_transfer_wizard" model="ir.ui.view">
        <field name="name">multi.location.transfer.wizard.form</field>
        <field name="model">multi.location.transfer.wizard</field>
        <field name="arch" type="xml">
            <form string="Multi Location Internal Transfer">
                <group>
                    <field name="product_id"/>
                    <field name="source_location_id"/>
                    <field name="source_qty_available" readonly="1"/>
                </group>

                <notebook>
                    <page string="Destinations">
                        <field name="line_ids">
                            <list editable="bottom">
                                <field name="destination_location_id"/>
                                <field name="destination_qty_available" readonly="1"/>
                                <field name="quantity"/>
                            </list>
                        </field>
                    </page>
                </notebook>

                <footer>
                    <button
                            name="action_confirm"
                            type="object"
                            string="Confirm Transfer"
                            class="btn-primary"
                    />
                    <button
                            string="Cancel"
                            special="cancel"
                            class="btn-secondary"
                    />
                </footer>
            </form>

        </field>
    </record>

</odoo>
