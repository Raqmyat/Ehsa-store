<odoo>
    <record id="view_stock_picking_add_available_qty" model="ir.ui.view">
        <field name="name">stock.picking.available.qty</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='move_ids_without_package']/list/field[@name='product_id']"
                   position="after">

                <field name="source_qty_available"
                       readonly="1"
                       invisible="parent.picking_type_code != 'internal'"/>

                <field name="dest_qty_available"
                       readonly="1"
                       invisible="parent.picking_type_code != 'internal'"/>

            </xpath>

        </field>
    </record>
</odoo>
